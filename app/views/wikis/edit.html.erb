<h1>Edit Wiki</h1>

<div class="row">
  <div class="col-md-5">
    <p><strong>NOTE: </strong>Please keep the title as short as possible</p>
  </div>
  <div class="col-md-7">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 24, class: 'form-control', placeholder: "Enter wiki text here" %>
      </div>
      <div class="form-group private-check">
        <%= f.label :private, class: 'checkbox' do %>
          <%= f.check_box :private %> Private topic?
        <% end %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
